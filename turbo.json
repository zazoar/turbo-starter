{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**"]
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**/!(*.test).{ts,tsx,js,jsx}",
        "**/*.test.{ts,tsx,js,jsx}",
        "test/setup/**",
        "vitest.config.{ts,js}"
      ],
      "outputs": []
    },
    "test:cov": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**/!(*.test).{ts,tsx,js,jsx}",
        "**/*.test.{ts,tsx,js,jsx}",
        "test/setup/**",
        "vitest.config.{ts,js}"
      ],
      "outputs": ["coverage/**"]
    },
    "test:watch": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "//#check": {}
  }
}
